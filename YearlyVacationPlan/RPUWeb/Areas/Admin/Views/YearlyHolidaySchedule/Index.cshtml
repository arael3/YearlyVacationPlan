@model IEnumerable<YearlyHolidaySchedule>
@{
    ViewData["Title"] = "Index";
}

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Roczne harmonogramy świąt</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="YearlyHolidaySchedule" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Utwórz Roczny harmonogram świąt</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Rok
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.Year
                    </td>
                    <td width="20%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="YearlyHolidaySchedule" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> &nbsp; Edytuj</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
